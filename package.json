{
"name": "zeromq-prime-demo",
"private": true,
"type": "module",
"engines": { "node": ">=22" },
"workspaces": ["app", "worker"],
"scripts": {
"dev": "npm-run-all -p dev:app dev:worker",
"dev:app": "npm --workspace app run dev",
"dev:worker": "npm --workspace worker run dev",
"start": "npm-run-all -p start:app start:worker",
"start:app": "npm --workspace app run start",
"start:worker": "npm --workspace worker run start"
},
"dependencies": {
"dotenv": "^16.4.5",
"npm-run-all": "^4.1.5"
}
}